<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Time_NoTime">

    <Button
        android:id="@+id/button3"
        android:layout_width="180dp"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        android:background="@drawable/gra_orange"
        android:text="Начать игру"
        android:textSize="14sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/reel_twoo"
        android:layout_width="match_parent"
        android:layout_height="1000dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_below="@+id/rel_onn"
        android:layout_marginTop="279dp"
        android:background="#228B22	">

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel_onn"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#8CCB5E">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="12dp"
            android:text="@string/crocodile"
            android:textAlignment="center"
            android:textColor="#FFF"
            android:textSize="27sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView8"
            android:text="@string/play_modes"
            android:textAlignment="center"
            android:textColor="#FFF"
            android:textSize="15sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/reel_three"
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:layout_centerInParent="true"
        android:background="@drawable/new_green">

        <RelativeLayout
            android:id="@+id/reel_white"
            android:layout_width="200dp"
            android:layout_height="3dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="166dp"
            android:background="@drawable/gra_white"
            android:visibility="invisible">

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/reel_timer"
            android:layout_width="300dp"
            android:layout_height="140dp"
            android:layout_below="@+id/textView13"
            android:layout_centerInParent="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/new_green"
            android:visibility="invisible">

            <Button
                android:id="@+id/button7"
                android:layout_width="60dp"
                android:layout_height="35dp"
                android:layout_alignBottom="@+id/textView81"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="30dp"
                android:background="@drawable/gra_orange"
                android:text="-10 \nсекунд"
                android:textSize="11sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button8"
                android:layout_width="60dp"
                android:layout_height="35dp"
                android:layout_alignBottom="@+id/textView81"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/gra_orange"
                android:text="+10 \nсекунд"
                android:textSize="11sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView79"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="время на тайм"
                android:textColor="#fff"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/textView80"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView79"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="20"
                android:textColor="#fff"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView81"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView80"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-5dp"
                android:text="секунд"
                android:textColor="#fff"
                android:textSize="16sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:text="@string/choose_s"
            android:textAlignment="center"
            android:textColor="#FFF"
            android:textSize="27sp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/imageView2"
            android:layout_alignStart="@+id/imageView2"
            android:layout_below="@+id/imageView2"
            android:text="@string/on_time"
            android:textAlignment="center"
            android:textColor="#FFF"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/imageView6"
            android:layout_alignStart="@+id/imageView6"
            android:layout_below="@+id/imageView2"
            android:text="@string/nm"
            android:textAlignment="center"
            android:textColor="#FFF"
            android:textSize="17sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="90dp"
            android:contentDescription="@string/todo"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="30dp"
            android:layout_marginTop="90dp"
            android:contentDescription="@string/todo" />

    </RelativeLayout>



</RelativeLayout>